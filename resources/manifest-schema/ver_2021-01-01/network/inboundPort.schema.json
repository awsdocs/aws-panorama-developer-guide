{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Inbound port schema",
  "type": "object",

  "properties":
  {
    "description":
    {
      "description": "Description of the port's functionality",
      "type": "string",
      "maxLength": 255
    },
    "port":
    {
      "description": "Port number",
      "type": "integer",
      "minimum": 1,
      "maximum": 65535
    }
  },

  "required":
  [
    "port"
  ],

  "additionalProperties": false
}