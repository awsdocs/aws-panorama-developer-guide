{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Node graph manifest definition",
    "type": "object",

    "properties":
    {
        "nodeGraph":
        {
            "type": "object",

            "properties":
            {
                "envelopeVersion":
                {
                    "enum": [ "2021-01-01" ]
                },

                "description":
                {
                    "type": "string",
                    "maxLength": 255
                },

                "packages":
                {
                    "description": "List of packages that define interfaces used in the graph",
                    "type": "array",
                    "minItems": 1,
                    "items":
                    {
                        "$ref": "nodePackageInclude.schema.json#"
                    }
                },

                "nodes":
                {
                    "description": "List of node instantiations",
                    "type": "array",
                    "minItems": 1,
                    "items":
                    {
                        "$ref": "node/node.schema.json#"
                    }
                },

                "edges":
                {
                    "description": "List of edges",
                    "type": "array",
                    "items":
                    {
                        "$ref": "edge.schema.json#"
                    }
                }
            },

            "required": [
                "envelopeVersion",
                "packages",
                "nodes"
            ],

            "additionalProperties": false
        }
    },

    "additionalProperties": false
}
